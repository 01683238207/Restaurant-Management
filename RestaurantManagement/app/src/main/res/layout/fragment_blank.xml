<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context="com.example.user.restaurantmanagement.BlankFragment">

    <Button
        android:id="@+id/btn_qnt1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="1"
        android:background="@drawable/circular_button"/>
    <Button
        android:layout_marginLeft="5dp"
        android:id="@+id/btn_qnt2"
        android:text="2"
        android:layout_toRightOf="@id/btn_qnt1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circular_button"/>
    <Button
        android:layout_marginLeft="5dp"
        android:id="@+id/btn_qnt3"
        android:text="3"
        android:layout_toRightOf="@id/btn_qnt2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circular_button"/>
    <Button
        android:layout_marginLeft="5dp"
        android:id="@+id/btn_qnt4"
        android:text="4"
        android:layout_toRightOf="@id/btn_qnt3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circular_button"/>



</RelativeLayout>
